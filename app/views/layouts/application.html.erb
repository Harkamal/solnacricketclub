<!DOCTYPE html>
<html>
  <head>
    <title>SolnaCricketClub</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- JavaScript Libraries -->
    <!-- <link href="img/favicon.ico" rel="icon"> -->

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Barlow:wght@400;500;600;700;800;900&display=swap" rel="stylesheet"> 
    
    <!-- CSS Libraries -->
    <%= stylesheet_link_tag 'bootstrap', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    
    <%= stylesheet_link_tag 'flaticon' %>
    <%= stylesheet_link_tag 'animate' %>
    <%= stylesheet_link_tag 'owl_carousel' %>
    <%= stylesheet_link_tag 'style' %>
  </head>

  <body>

    <!-- Top Bar Start -->
    <div class="top-bar d-none d-md-block">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-8">
                    <div class="top-bar-left">
                        <div class="text">
                            <i class="fa fa-phone-alt"></i>
                            <p><%= contact_us_phone_number %></p>
                        </div>
                        <div class="text">
                            <i class="fa fa-envelope"></i>
                            <p><%= contact_us_email %></p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="top-bar-right">
                        <div class="social">
                            <a href=""><i class="fab fa-facebook-f"></i></a>
                            <a href=""><i class="fab fa-instagram"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Top Bar End -->

    <!-- Nav Bar Start -->
    <div class="navbar navbar-expand-lg bg-dark navbar-dark">
        <div class="container-fluid">
            <a href="#" class="navbar-brand">
                <%= image_tag "logo.jpeg" %>    
                <span>Solna Cricket Club</span></a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                <div class="navbar-nav ml-auto">
                    <a href="/" class="nav-item nav-link active">HOME</a>
                    <a href="#about" data-turbolinks="false" class="nav-item nav-link">JOIN US</a>
                    <a href="#team" data-turbolinks="false" class="nav-item nav-link">TEAM</a>
                     <a href="#teamPhotos" data-turbolinks="false" class="nav-item nav-link">GALLERY</a>
                   
                    <%# <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Pages</a>
                        <div class="dropdown-menu">
                           
                        </div>
                    </div> %>
                    <%# <a href="#contact" class="nav-item nav-link">Contact</a> %>
                </div>
            </div>
        </div>
    </div>
    <!-- Nav Bar End -->
    <%= yield %>

    <!-- Footer Start -->
    <%= render partial: "layouts/footer" %>
    <!-- Footer End -->

    <!-- Back to top button -->
    <a href="#" class="back-to-top"><i class="fa fa-chevron-up"></i></a>

    <!-- Pre Loader -->
    <div id="loader" class="show">
        <div class="loader"></div>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <%= javascript_pack_tag 'easing', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'owl_carousel', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'waypoints', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'counterup', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'parallax', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'jqBootstrapValidation', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'contact', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'main', 'data-turbolinks-track': 'reload' %>
  </body>
</html>
